<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="StudentListReport" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20"
              language="java">

    <!-- Parameter tiêu đề -->
    <parameter name="title" class="java.lang.String"/>

    <!-- Fields từ DB -->
    <field name="stuCode" class="java.lang.String"/>
    <field name="stuName" class="java.lang.String"/>

    <!-- Variable STT bắt đầu từ 1 -->
    <variable name="STT" class="java.lang.Integer" calculation="Nothing" resetType="Report">
        <variableExpression><![CDATA[$V{STT} == null ? 1 : $V{STT} + 1]]></variableExpression>
    </variable>

    <!-- Title -->
    <title>
        <band height="50">
            <textField>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" pdfFontName="fonts/arial.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true" size="18" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{title}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- Column Header -->
    <columnHeader>
        <band height="25">
            <staticText>
                <reportElement x="0" y="0" width="50" height="25"/>
                <textElement>
                    <font fontName="Arial" pdfFontName="fonts/arial.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[STT]]></text>
            </staticText>
            <staticText>
                <reportElement x="60" y="0" width="100" height="25"/>
                <textElement>
                    <font fontName="Arial" pdfFontName="fonts/arial.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Mã SV]]></text>
            </staticText>
            <staticText>
                <reportElement x="170" y="0" width="200" height="25"/>
                <textElement>
                    <font fontName="Arial" pdfFontName="fonts/arial.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Tên SV]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail -->
    <detail>
        <band height="20">
            <!-- STT -->
            <textField>
                <reportElement x="0" y="0" width="50" height="20"/>
                <textElement>
                    <font fontName="Arial" pdfFontName="fonts/arial.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true" size="12"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{STT}]]></textFieldExpression>
            </textField>

            <!-- Mã SV -->
            <textField>
                <reportElement x="60" y="0" width="100" height="20"/>
                <textElement>
                    <font fontName="Arial" pdfFontName="fonts/arial.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true" size="12"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{stuCode}]]></textFieldExpression>
            </textField>

            <!-- Tên SV -->
            <textField>
                <reportElement x="170" y="0" width="200" height="20"/>
                <textElement>
                    <font fontName="Arial" pdfFontName="fonts/arial.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true" size="12"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{stuName}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>
